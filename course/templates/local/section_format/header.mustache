{{!
    @template core_course/local/section_format/header

    Displays a course section header.

    Example context (json):
    {
        "name": "Section title",
        "url": "#",
        "ishidden": true
    }
}}

{{#coursedisplay}}
    <h3 class="sectionid-{{id}}-title sectionname">
        {{#url}}
        <a href="{{{url}}}" class="{{#ishidden}} dimmed_text {{/ishidden}}">{{name}}</a>
        {{/url}}
        {{^url}}
        <span>{{{title}}}</span>
        {{/url}}
    </h3>
{{/coursedisplay}}
{{^coursedisplay}}
    <h3 class="coursecontent-item d-flex {{^visible}}dimmed{{/visible}}"
        id="coursecontentsection{{num}}"
        data-for="section_item">
        <a data-toggle="collapse"
           href="#coursecontentcollapse{{num}}"
           aria-expanded="{{#isactive}}true{{/isactive}}{{^isactive}}false{{/isactive}}"
           aria-controls="coursecontentcollapse{{num}}"
           class="coursecontent-link icons-collapse-expand {{^isactive}}collapsed{{/isactive}}">
            {{#isactive}}
                <span class="expanded-icon icon-no-margin mr-1"
                      data-toggle="tooltip" title="{{#str}} collapse, core {{/str}}">
                    {{#pix}} t/expanded, core {{/pix}}
                    {{name}}
                    <span class="sr-only">{{#str}} collapse, core {{/str}}</span>
                </span>
            {{/isactive}}
            {{^isactive}}
                <span class="collapsed-icon icon-no-margin mr-1"
                      data-toggle="tooltip" title="{{#str}} expand, core {{/str}}">
                    {{#pix}} t/collapsed, core {{/pix}}
                    {{name}}
                    <span class="sr-only">{{#str}} expand, core {{/str}}</span>
                </span>
            {{/isactive}}
        </a>
    </h3>
{{/coursedisplay}}
